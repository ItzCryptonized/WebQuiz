<html data-bs-theme="dark">
  <head>
    <title>Quiz</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <div class="container-xl d-flex justify-content-center align-middle pt-3">
      <div
        class="card flex-column justify-content-center p-5"
        style="width: 100%; display: none"
        id="game-over"
      >
        <h1 class="text-center">Game Over</h1>
        <p class="text-center" id="score">0/0</p>
        <button
          class="btn btn-outline-primary d-flex align-self-center text-center"
          id="start-game"
          style="width: 50%"
          onclick="window.location.href = '/'"
        >
          Play Again
        </button>
      </div>
      <div
        class="card justify-content-center align-middle"
        id="game-display"
        style="width: 90%"
      >
        <div class="card-header" id="questionTitle">
          <h1><%= question %></h1>
        </div>
        <div class="card-body">
          <img
            id="questionImage"
            style="max-height: 35rem"
            crossorigin="anonymous"
            class="img-fluid mx-auto d-block"
          />

          <div id="single-input" class="row mt-2">
            <form method="POST" action="/answer" id="input-form">
              <div class="row">
                <div class="col">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Answer"
                    id="single-input-answer"
                    autocomplete="off"
                  />
                </div>
                <div class="col-lg-2" id="single-button-holder">
                  <button
                    class="btn btn-outline-primary"
                    type="submit"
                    id="single-input-submit"
                    style="width: 95%"
                  >
                    Submit
                  </button>
                </div>
              </div>
            </form>
          </div>
          <div id="multi-input" class="row mt-2"></div>
          <div
            class="alert alert-info"
            style="display: none"
            id="correct-answer"
            role="alert"
          ></div>
        </div>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script>
      var question = '<%= question %>';
      var questionData = '<%= JSON.stringify(questionData) %>'.replace(
        /&#34;/g,
        '"',
      );
    </script>
    <script src="/js/home.js"></script>
  </body>
</html>
